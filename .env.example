# Anthropic API Key
ANTHROPIC_API_KEY=your_api_key_here

# Target website URL to scrape
TARGET_URL=https://example.com

# SSL certificate verification (true/false)
# Set to false only for trusted sites with self-signed certificates
# WARNING: Disabling SSL verification is a security risk
VERIFY_SSL=true

# Update frequency in minutes
UPDATE_FREQUENCY=60

# ChromaDB settings
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Crawler settings
# CRAWL_MODE: 'single' for single page only, 'full' for entire website
CRAWL_MODE=single
# MAX_PAGES: Maximum number of pages to crawl (safety limit)
MAX_PAGES=100
# MAX_DEPTH: Maximum link depth to follow (0 = start page only)
MAX_DEPTH=3
# CRAWL_DELAY: Delay in seconds between requests (politeness)
CRAWL_DELAY=1.0
# SAME_DOMAIN_ONLY: Only crawl links within the same domain (true/false)
SAME_DOMAIN_ONLY=true
# EXCLUDE_PATTERNS: Comma-separated patterns to exclude from crawling
EXCLUDE_PATTERNS=.pdf,.jpg,.png,.gif,/admin,/login

# API settings
API_HOST=0.0.0.0
API_PORT=8000
